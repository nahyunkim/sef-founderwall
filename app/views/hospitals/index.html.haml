-#  This file is app/views/wall/index.html.haml
.row
  .col-lg-12
    %h1.page-header
      Wall of Founders
      %small Sankara Eye Foundation
      
.well.well-small     
  = form_tag "/", method: :get, class: 'form-inline' do
    .form-group
      = search_field_tag :query, params[:query],
        placeholder: 'Search for something',
        size: 80,
        class: 'form-control'
      = submit_tag 'Search', name: nil, class: 'btn btn-default'      
      
- @hospitals.each do |hospital|
  .row
    .col-md-7
      %a{:href => "#"}
        %img.img-responsive{:alt => "", :src => "http://placehold.it/700x300"}/
    .col-md-5
      %h3= "#{hospital.name}"
      %h4= "#{hospital.city}, #{hospital.state}"
      %p= "Building Status: #{hospital.building_status}"
      %a.btn.btn-primary{:href => hospital_path(hospital)}
        View Project
        %span.glyphicon.glyphicon-chevron-right
  %hr/

.well
  = form_for_filterrific @filterrific do |f|
    .row
      .col-md-4
        .form-group.chardin_box{ :'data-position' => 'top', :'data-intro' => 'Search by first name, last name, or email.' }
          %label Search
          = f.text_field :search_query,
                         :class => 'filterrific-periodically-observed form-control'
      .col-md-4
        .form-group.chardin_box{ :'data-position' => 'top', :'data-intro' => 'Change the sorting.' }
          %label Sorted by
          = f.select :sorted_by,
                     @filterrific.select_options[:sorted_by],{},{ :class => 'form-control' }

#results
  = render :partial => 'dedications/list',
           :locals => { :dedications => @dedications }