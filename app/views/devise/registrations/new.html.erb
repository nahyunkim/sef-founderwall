<h2>Sign up</h2>

<%= form_for(resource, as: resource_name,  url: user_registration_path(resource), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, :value => @donor.email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  
  <%= f.hidden_field :donor_id, :value => params[:donor_id] %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
